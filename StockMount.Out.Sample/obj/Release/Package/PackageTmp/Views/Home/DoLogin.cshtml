@using StockMount.Out.Sample.Utils.Language
@{
    ViewBag.Title = @Message.GetMessage(MessageCode.DoLoginService, Culture);
}
<div class="caption-full">
    <h2>@Message.GetMessage(MessageCode.DoLoginService, Culture)</h2>

    <div class="clearfix">
        <hr />
    </div>
    <p> <strong>@Message.GetMessage(MessageCode.Description, Culture):</strong> 
        <br/> @Html.Raw(Message.GetMessage(MessageCode.DoLoginServiceDescription, Culture))  </p>
    <p> <strong>@Message.GetMessage(MessageCode.RequestType, Culture):</strong>
        <br />  Post  </p>
    <p> <strong>@Message.GetMessage(MessageCode.RequestUrl, Culture): </strong> 
        <br /> https://out.stockmount.com/api/user/dologin  </p>
    
    <a class="btn btn-success" id="btn-test">@Message.GetMessage(MessageCode.TestService, Culture) </a>
    
    <div class="well display-none margin-top-10" id="test-area">
        
        <div class="form-group">
            <label for="userName">@Message.GetMessage(MessageCode.UserName, Culture) <span class="label label-danger">@Message.GetMessage(MessageCode.Required, Culture)</span></label>
            <input type="text" class="form-control" id="userName" placeholder="@Message.GetMessage(MessageCode.UserName, Culture)" value="Demo">
        </div>
        <div class="form-group">
            <label for="password">@Message.GetMessage(MessageCode.Password, Culture) <span class="label label-danger">@Message.GetMessage(MessageCode.Required, Culture)</span></label>
            <input type="text" class="form-control" id="password" placeholder="@Message.GetMessage(MessageCode.Password, Culture)" value="Demo">
        </div> 
        <a class="btn btn-success" id="btn-execute">@Message.GetMessage(MessageCode.Execute, Culture) </a>
        <div class="clearfix"></div>
        <br/>
        <div class="bg-warning display-hide" id="response-area">

        </div>
    </div>
</div>
 
@section scripts{
@Scripts.Render("~/js/DoLogin") 
<script type="text/javascript">
    $(document).ready(function () {
        DoLogin.init();
    });

</script>
 
}
