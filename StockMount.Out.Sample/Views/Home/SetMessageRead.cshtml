@using StockMount.Out.Sample.Utils.Language
@{
    ViewBag.Title = @Message.GetMessage(MessageCode.SetMessageReadService, Culture);
}
<div class="caption-full">
    <h2>@Message.GetMessage(MessageCode.SetMessageReadService, Culture)</h2>

    <div class="clearfix">
        <hr />
    </div>
    <p>
        <strong>@Message.GetMessage(MessageCode.Description, Culture):</strong>
        <br /> @Html.Raw(Message.GetMessage(MessageCode.SetMessageReadServiceDescription, Culture))
    </p>
    <p>
        <strong>@Message.GetMessage(MessageCode.RequestType, Culture):</strong>
        <br />  Post
    </p>
    <p>
        <strong>@Message.GetMessage(MessageCode.RequestUrl, Culture): </strong>
        <br /> https://out.stockmount.com/api/Integration/SetMessageRead
    </p>

    <a class="btn btn-success" id="btn-test">@Message.GetMessage(MessageCode.TestService, Culture) </a>

    <div class="well display-none margin-top-10" id="test-area">

        <div class="form-group">
            <label for="store">@Message.GetMessage(MessageCode.StoreId, Culture) <span class="label label-danger">@Message.GetMessage(MessageCode.Required, Culture)</span></label>
            <input type="text" class="form-control" id="store" placeholder="@Message.GetMessage(MessageCode.StoreId, Culture)" value="1">
        </div>

        <div class="form-group">
            <label for="integration">@Message.GetMessage(MessageCode.IntegrationId, Culture) <span class="label label-danger">@Message.GetMessage(MessageCode.Required, Culture)</span> </label>
            <select class="form-control" id="integration">
                <option value="0" selected="selected">@Message.GetMessage(MessageCode.SelectIntegration, Culture) </option>
                <option value="1">GiittiGidiyor</option>
                <option value="2">N11</option>
                <option value="3">NeTicaret</option>
                <option value="4">ePTTAvm</option>
                <option value="5">OpenCart</option>
                <option value="6">SanalPazar</option>
                <option value="9999">StockMount</option>
            </select>
        </div>

        <div class="form-group">
            <label for="integration">@Message.GetMessage(MessageCode.UserMessageId, Culture) <span class="label label-danger">@Message.GetMessage(MessageCode.Required, Culture)</span></label>
            <input type="text" class="form-control" id="messageId" placeholder="@Message.GetMessage(MessageCode.UserMessageId, Culture)" value="1">
        </div>

        <div class="form-group">
            <label for="messageCode">@Message.GetMessage(MessageCode.UserMessageCode, Culture) <span class="label label-danger">@Message.GetMessage(MessageCode.Required, Culture)</span></label>
            <input type="text" class="form-control" id="messageCode" placeholder="@Message.GetMessage(MessageCode.UserMessageCode, Culture)" value="1">
        </div>
          

        <a class="btn btn-success" id="btn-execute">@Message.GetMessage(MessageCode.Execute, Culture) </a>
        <div class="clearfix"></div>
        <br />
        <div class="bg-warning display-hide" id="response-area">

        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/js/SetMessageRead")
    <script type="text/javascript">
        $(document).ready(function () {
            SetMessageRead.init();
        });

    </script>
}
